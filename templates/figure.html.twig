{% extends 'base.html.twig' %}

{% block pageContent %}
    <div class="container pageContent">
        <div class="top_image">
            <div id="card_top" class="card border-dark mb-4">
                <img class="card_image" src="{{ figure.firstImage }}" alt="image"/>
                <div class="card-footer">
                    {% if is_granted('ROLE_ADMIN') %}
                        <div class="push-right">
                            <a class="btn btn-primary" href="{{ path('edit_figure' , {'id' : figure.id}) }}">
                                <i class="far fa-edit"></i>
                            </a>
                            {{ include('logged/deleteFigureModal.html.twig') }}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="media">
            {% for link in figure.links %}
                <div class="card border-dark mb-4">
                    <iframe class="card_image" src="{{ link.url | replace({'watch?v=' : 'embed/'}) }}"></iframe>
                </div>
            {% endfor %}
            {% for image in figure.images %}
                {% if not loop.first %}
                    <div class="card border-dark mb-4">
                        <img class="card_image" src="{{ image.getImagePath() }}" alt="image"/>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
        <hr/>
        <div class="description">
            <p>{{ figure.description }}</p>
        </div>
        <hr/>
        <div class="details">
            <h6>Group : </h6>
            <h6>Creation date : {{ figure.dateCreation | date('d-m-Y')}}</h6>
            <h6>Modification date : {{ figure.dateLastModification | date('d-m-Y')}}</h6>
        </div>
        <hr/>
        {% if is_granted('ROLE_ADMIN') %}
            <p>Enter comment :</p>
            {{ form(form) }}
        {% endif %}
        <hr/>
        <div class="comments" id="comments">
            <div class="previousComments">
                <h3 id="commentaires"><u>Comments</u></h3>
                {% if app.request.get('success') %}
                    {% include 'messageFlash.html.twig' with {'buttonId': 'commentSend'} %}
                {% endif %}
                {% include('Comment/comment.html.twig') %}
            </div>
        </div>
    </div>
{% endblock %}